<div class="container text-center">
<h1>Make a new receipt</h1>
	<% flash.each do |key, value| %>
        <div class="alert alert-danger"><%= value %></div>
     <% end %>
	<div class="row">
	<%= form_for @receipt, url: receipts_path , method: "post" do |r| %>
		<%= label_tag "Amount" %>
		<%= r.text_field :amount %>
		<%= label_tag "Tip" %>
		<%= r.text_field :tip %>
		<%= label_tag "Total" %>
		<%= r.text_field :total %>
		<%= label_tag "Transaction Numnber" %>
		<%= r.text_field :transaction_num %>
		<%= r.submit "Submit" %>
	<% end %>
	<div>
	<% console %>
</div>